<div id='index'>
  <h1>HorseFinder</h1>
  <div>
    <form action='/' method='get'>
      <fieldset class='form-group'>
        <label>Find Nearest Racecourse</label>
        <input type="text" name='postcode' class="form-control" value="{{{ postcode }}}" autocomplete='off'>
      </fieldset class='form-group'>
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
  {{> results }}
</div>

<img src="{{{ map_src}}}"/>
